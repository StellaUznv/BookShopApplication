@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center">
            <h1 class="display-4 mb-4">Welcome to BookShopApplication Demo!</h1>

            <p class="lead">
                This application is dedicated to helping our eco footprint by giving the opportunity to trade used books — or brand-new ones if you like.
            </p>

            <p>
                Trading used books not only spreads knowledge but also helps save our planet. Join our community in making reading more sustainable!
            </p>
            <hr class="my-4" />

            <p class="h5 mt-4">
                Here you can <strong>browse</strong>, <strong>buy</strong>, or even <strong>sell books</strong> at your very own Bookshop.
            </p>

            <form asp-controller="Book" asp-action="Index" method="get">
                <button type="submit" class="btn btn-primary">Browse Books</button>
            </form>

        </div>
    </div>
</div>

