@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BookShopApplication.Web.ViewModels.Book.BookViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All Books";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Available Books</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">

                    @* Image section *@
                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img src="@book.ImagePath"
                             class="card-img-top img-fluid"
                             alt="@book.Title"
                             style="object-fit: cover; height: 250px;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">By @book.Author</h6>
                        <p class="card-text text-truncate" title="@book.Description">
                            @book.Description
                        </p>

                        <ul class="list-unstyled mt-auto">
                            <li><strong>Genre:</strong> @book.Genre</li>
                            <li><strong>Price:</strong> $@book.Price</li>
                            <li>
                                <strong>Available In:</strong>
                                <ul class="mb-0">
                                    @foreach (var shop in book.AvailableInShops)
                                    {
                                        <li>@shop</li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary btn-sm">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
