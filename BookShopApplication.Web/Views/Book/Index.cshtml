@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BookShopApplication.Web.ViewModels.Book.BookViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All Books";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Available Books</h2>

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm card bg-light mb-3" style="font-size: 0.85rem;">

                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img src="@book.ImagePath"
                        class="card-img-top img-fluid"
                        alt="@book.Title"
                        style="object-fit: cover; height: 160px;" />
                    }
                    <div class=" card-header"><h6 class="card-title mb-1 text-truncate" title="@book.Title">@book.Title</h6></div>
                    <div class="card-body p-2 d-flex flex-column">

                        <small class="text-muted mb-2 text-truncate">By @book.Author</small>

                        <ul class="list-unstyled mt-auto mb-2 small">
                            <li><strong>Genre:</strong> @book.Genre</li>
                            <li><strong>Price:</strong> $@book.Price</li>
                            @* <li>
                                <strong>Available In:</strong>
                                <ul class="mb-0">
                                    @foreach (var shop in book.AvailableInShops)
                                    {
                                        <li>@shop</li>
                                    }
                                </ul>
                            </li> *@
                        </ul>

                        <div class="text-center mt-auto">
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"
                            class="btn btn-sm btn-info">
                                View Details
                            </a>
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {


                                <div class="d-flex justify-content-between gap-2 mt-2">
                                    <form asp-controller="Cart" asp-action="Add" method="post" class="w-50">
                                        <input type="hidden" name="bookId" value="@book.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary w-100">
                                            <i class="bi bi-cart-plus"></i>Add To Cart
                                        </button>
                                    </form>
                                    @if (!book.IsInWishlist)
                                    {
                                        <form asp-controller="Wishlist" asp-action="Add" method="post" class="w-50">
                                            <input type="hidden" name="bookId" value="@book.Id"/>
                                            <button type="submit" class="btn btn-sm btn-danger w-100">
                                                <i class="bi bi-heart"></i>Wishlist
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-controller="Wishlist" asp-action="Index" method="get" class="w-50">
                                            <button type="submit" class="btn btn-sm btn-secondary w-100">
                                                <i class="bi bi-heart"></i>Go To Wishlist
                                            </button>
                                        </form>
                                    }

                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
