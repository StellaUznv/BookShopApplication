@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // or your global layout path
    ViewData["Title"] = "Managed Shops";
}
@model IEnumerable<BookShopApplication.Web.ViewModels.Shop.ShopViewModel>
<h2>My Shops</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var shop in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@shop.Name</h5>
                    <p class="card-text">@shop.Description</p>
                    <p class="text-muted">@shop.LocationAddress, @shop.LocationCity</p>
                    <a asp-action="Edit" asp-route-id="@shop.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@shop.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="AddBook" asp-route-shopId="@shop.Id" class="btn btn-sm btn-primary">Add Book</a>
                </div>
            </div>
        </div>
    }
</div>